<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B4B4B4">
    <!--标题部分-->
    <LinearLayout
        android:layout_weight="6"
        android:background="#4FC476"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <!--图片-->
        <ImageView
            android:id="@+id/my_frag_img_id"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/mrtx_pic"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"/>
            <!--电话号码-->
            <TextView
                android:id="@+id/my_frag_phone_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:text="15874908437"/>
        </LinearLayout>
        <!--右边图标-->
        <TextView
            android:id="@+id/my_frag_go_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:text=">"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#ccc">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <!--第一个ListView-->
            <ListView
                android:id="@+id/my_frag_lv_01"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <!--第二个ListView-->
            <ListView
                android:id="@+id/my_frag_lv_02"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/btn_small_green"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:gravity="center"
                android:text="退出登录"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>